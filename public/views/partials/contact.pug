link(rel='stylesheet', href='./styles/contact.css')
section#contact-modal
  span#close-modal
      img(src="./icons/close_button.svg" alt="&times")
  p User Group is a worker-owned cooperative run by a committed group of scientists, engineers, IT specialists, economists, and designers.
  .one-half.column#address
    .menu-item ADDRESS
    p.block
      a(href="mailto:info@usergroupcoop.com") info@usergroupcoop.com
      | 71-75 Shelton Street
      | Covent Garden
      | WC2H 9JQ
      | London, UK
  p Get in touch!
  
  form(action="/sayHello" id="contactForm")
    .one-half.column
      label.menu-item name
      .marker
      input(type="text" name="name")
      label.menu-item email address 
      .marker
      input(type="email" name="email")
      label.menu-item subject 
      .marker
      input(type="text" name="subject")
      label.menu-item message 
      .marker
    textarea
    input(type="submit" value="" id="send") 
    span.error-message Sorry, your message has not been sent due to an error in one of the above fields
    span.success-message Your message has been sent
    span.error-network Due to network error, please send inquiry via info@usergroupcoop.com
script(type='text/javascript', src='/scripts/contact.js')
